<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        android:columnCount="2"
        android:rowCount="3">

        <!-- // Calender Card // -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/iconCalender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@string/title_home"
                    android:src="@drawable/baseline_calendar_month_24"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/textIconCalender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Calendar"
                    android:textSize="30sp"
                    android:textColor="@android:color/black" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- // Goals Card // -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/iconGoals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@string/title_home"
                    android:src="@drawable/baseline_bar_chart_24"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/textIconGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Goals"
                    android:textSize="30sp"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- // Class Journal // -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/iconClassJournal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@string/title_home"
                    android:src="@drawable/baseline_assignment_24"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/textClassJournal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Class Journal"
                    android:textSize="30sp"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- // Calender Card // -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="15dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/iconInsights"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="@string/title_home"
                    android:src="@drawable/baseline_auto_graph_24"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/textInsights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Insights"
                    android:textSize="30sp"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>